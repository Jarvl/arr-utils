# Sonarr connection
SONARR_URL=http://localhost:8989
SONARR_API_KEY=replace-with-your-api-key

# Matching criteria (indexer Info URL substring)
GRAB_PURGER_INDEXER_SUBSTRING=torrentgalaxy.one

# Concurrency and pagination
SERIES_CONCURRENCY=4
EPISODE_CONCURRENCY=10
SONARR_PAGE_SIZE=250

# Behavior
DRY_RUN=true

# Optional: specify a custom env file path to load (used at runtime)
# ENV_FILE=/absolute/path/to/.env

